{
  "buildCommand": "cd client && npm install && npm run build",
  "outputDirectory": "client/dist",
  "installCommand": "npm install",
  "functions": {
    "api/*.js": {
      "maxDuration": 30
    }
  },
  "redirects": [
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ]
}